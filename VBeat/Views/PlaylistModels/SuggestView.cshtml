
@{
    ViewData["Title"] = "SuggestView";
    List<SongModel> songList = (List<SongModel>)ViewData["SongList"];
    PlaylistModel playlistModel = (PlaylistModel)ViewData["Target"];
}

<div class="container">
    <h2>Songs that you might like</h2>


    @if (songList.Count != 0)
    {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Song Image</th>
                    <th scope="col">Release Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (SongModel song in songList)
                {
                    <tr>
                        <th scope="row">@song.SongId</th>
                        <td>@song.SongName</td>
                        <td>@song.Genre</td>
                        <td><img src="@song.SongImagePath" /></td>
                        <td>@song.ReleaseDate.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>
            It seems like we don't have enough data to suggest any new songs!
        </h1>
    }

</div>

